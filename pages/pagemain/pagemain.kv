#:import PageMainGrid pages.pagemain.pagemain
#:import environ os.environ
<PageMainGrid>
    name:'main_screen'
    on_enter:
        self.fetch_data()
    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        padding: dp(0),dp(60),dp(0),dp(0)
        ScrollView:
            do_scroll_x: False
            Grid:
                id:grid_list
                cols: 2
                row_default_height: (self.width - self.cols*self.spacing[0])/self.cols
                row_force_default: True
                adaptive_height: True
                padding: dp(4), dp(4)
                spacing: dp(4)
