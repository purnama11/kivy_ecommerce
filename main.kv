#:include pages/login/login.kv
#:include pages/pagelacak/lacak.kv
#:include pages/pagemain/pagemain.kv

<ItemDrawer>:
    theme_text_color: "Custom"
    on_release: self.parent.set_color_item(self)
    IconLeftWidget:
        id: icon
        icon: root.icon
        theme_text_color: "Custom"
        text_color: root.text_color
<ContentNavigationDrawer>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"
    AnchorLayout:
        anchor_x: "left"
        size_hint_y: None
        height: avatar.height
        Image:
            id: avatar
            source: "asset/logobesar.png"

    ScrollView:
        DrawerList:
            ItemDrawer:
                icon: 'home'
                text:'Home'
                on_release:
                    app.root.ids.screen_manager.current='main_screen'
            ItemDrawer:
                icon: 'cloud-search-outline'
                text:'Lacak'
                on_release:
                    app.root.ids.screen_manager.current='lacak_screen'
Landing:
    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            id: w_toolbar
            title: "Importir"
            md_bg_color: app.theme_cls.primary_color
            left_action_items: []
        Widget:
    NavigationLayout:
        ScreenManager:
            id:screen_manager
            PageLogin:
            PageLacak:
            PageMainGrid:
        MDNavigationDrawer:
            id: nav_drawer
            ContentNavigationDrawer:
                id: content_drawer





